{
    "name": "madalinignisca/drupal-skeleton",
    "description": "Drupal application skeleton",
    "type": "project",
    "license": "GPL2",
    "authors": [
        {
            "name": "Madalin Ignisca",
            "email": "madalin.ignisca@gmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "repositories": [
        {
            "type": "composer",
            "url":  "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "php": "^5.5.9 || ^7.0",
        "composer/installers": "^1.0.20",
        "drupal/core": "~8.1",
        "drupal/console": "~1.0",
        "drupal/drupal-library-installer-plugin": "^0.3.0",
        "drupal/composer_deploy": "^1.0"
    },
    "replace": {
        "drupal/drupal": "~8.1"
    },
    "extra": {
        "installer-paths": {
            "web/core": ["type:drupal-core"],
            "web/modules/contrib/{$name}": ["type:drupal-module"],
            "web/themes/contrib/{$name}": ["type:drupal-theme"],
            "web/profiles/{$name}": ["type:drupal-profile"]
        },
        "drupal-libraries": {
            "library-directory": "web/libraries",
            "libraries": [ ]
        }
    }
}
